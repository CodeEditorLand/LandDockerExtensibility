{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-docker-registries-extension"
            ],
            "outFiles": [
                "${workspaceFolder}/packages/vscode-docker-registries-extension/out/**/*.js",
                "${workspaceFolder}/packages/vscode-docker-registries/lib/**/*.js"
            ],
            "sourceMaps": true,
            "preLaunchTask": "npm-watch: vscode-docker-registries-extension"
        },
        {
            "name": "Container client tests",
            "request": "launch",
            "runtimeArgs": [
                "test",
                "--workspace=packages/vscode-container-client"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Docker registries tests",
            "request": "launch",
            "runtimeArgs": [
                "test",
                "--workspace=packages/vscode-docker-registries"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }
    ]
}
